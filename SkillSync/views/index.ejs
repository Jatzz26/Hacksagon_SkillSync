<script>
  // Intersection Observer for scroll animations
  document.addEventListener('DOMContentLoaded', function() {
    const animateOnScroll = (elements, animationClass) => {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add(animationClass);
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });
      
      elements.forEach(element => {
        observer.observe(element);
      });
    };
    
    // Animate feature cards when they come into view
    const featureCards = document.querySelectorAll('.feature-card');
    animateOnScroll(featureCards, 'animate_animated animate_fadeInUp');
    
    // Animate step cards when they come into view
    const stepCards = document.querySelectorAll('.step-card');
    animateOnScroll(stepCards, 'animate_animated animate_fadeInUp');
    
    // Add floating elements to features section
    const featuresSection = document.querySelector('.bg-light');
    for (let i = 0; i < 5; i++) {
      const element = document.createElement('div');
      element.classList.add('floating-bg-element');
      element.style.width = ${Math.random() * 60 + 40}px;
      element.style.height = element.style.width;
      element.style.left = ${Math.random() * 80 + 10}%;
      element.style.top = ${Math.random() * 80 + 10}%;
      element.style.animationDuration = ${Math.random() * 15 + 15}s;
      element.style.animationDelay = ${Math.random() * 5}s;
      featuresSection.appendChild(element);
    }
  });
</script>