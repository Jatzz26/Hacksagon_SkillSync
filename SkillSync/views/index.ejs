<style>
  /* Hero Section Animations */
  .hero-section {
    position: relative;
    overflow: hidden;
  }
  
  .title-hero {
    animation: fadeInUp 1s ease-out both;
  }
  
  .hero-section p.lead {
    animation: fadeInUp 1s ease-out 0.2s both;
  }
  
  .explore-btn {
    animation: fadeInUp 1s ease-out 0.4s both, pulse 2s infinite 2s;
    position: relative;
    z-index: 1;
  }
  
  /* Feature Card Animations */
  .feature-card {
    transition: all 0.4s ease;
    border-radius: 12px;
    padding: 30px 20px;
    background: white;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .feature-card:nth-child(1) { animation-delay: 0.2s; }
  .feature-card:nth-child(2) { animation-delay: 0.4s; }
  .feature-card:nth-child(3) { animation-delay: 0.6s; }
  
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
  }
  
  .feature-icon svg {
    transition: transform 0.3s ease;
  }
  
  .feature-card:hover .feature-icon svg {
    transform: scale(1.1);
  }
  
  /* Step Card Animations */
  .step-card {
    position: relative;
    padding: 30px 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: all 0.4s ease;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .step-card:nth-child(1) { animation-delay: 0.3s; }
  .step-card:nth-child(2) { animation-delay: 0.5s; }
  .step-card:nth-child(3) { animation-delay: 0.7s; }
  
  .step-number {
    position: absolute;
    top: -15px;
    left: 20px;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #1a4d4e 0%, #2c5f61 100%);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2em;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }
  
  .step-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }
  
  .step-card:hover .step-number {
    transform: scale(1.1) rotate(15deg);
  }
  
  /* Floating background elements (matches footer animation style) */
  .floating-bg-element {
    position: absolute;
    border-radius: 50%;
    background: rgba(51, 119, 135, 0.1);
    animation: floatAnimation 5s infinite linear;
    z-index: 0;
  }
  
  /* Keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  @keyframes floatAnimation {
    0% {
      transform: translateY(0) rotate(0deg);
      opacity: 0.5;
    }
    50% {
      opacity: 0.8;
    }
    100% {
      transform: translateY(-100px) rotate(180deg);
      opacity: 0;
    }
  }
  
  /* Add background floating elements to hero section */
  .hero-bg-elements {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    overflow: hidden;
    z-index: 0;
  }
  
  .hero-bg-elements div {
    position: absolute;
    background: rgba(51, 119, 135, 0.08);
    border-radius: 50%;
    animation: floatAnimation 20s linear infinite;
  }
  
  .hero-bg-elements div:nth-child(1) {
    width: 80px;
    height: 80px;
    left: 10%;
    top: 20%;
    animation-delay: 0s;
    animation-duration: 25s;
  }
  
  .hero-bg-elements div:nth-child(2) {
    width: 120px;
    height: 120px;
    left: 70%;
    top: 60%;
    animation-delay: 3s;
    animation-duration: 30s;
  }
  
  .hero-bg-elements div:nth-child(3) {
    width: 60px;
    height: 60px;
    left: 40%;
    top: 80%;
    animation-delay: 7s;
    animation-duration: 20s;
  }
</style>

