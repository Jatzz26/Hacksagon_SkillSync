<% layout('layout') %>

<section class="hero-section py-5 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7 col-sm-9">
                <div class="text-center mb-4">
                    <h1 class="title-hero text-center mb-3">
                        <i class="fas fa-user-plus me-2 text-info"></i> Register for SkillSync
                    </h1>
                    <p class="lead text-secondary-dark">Join our community and start your learning journey.</p>
                </div>

                <form action="/register" method="POST" class="card p-5 shadow-lg border-0 login-card">
                    <div class="mb-4">
                        <label for="name" class="form-label mb-2">Full Name</label>
                        <input type="text" class="form-control form-control-lg login-input" id="name" name="name" placeholder="Enter your full name" required>
                    </div>

                    <div class="mb-4">
                        <label for="enroll" class="form-label mb-2">Enrollment Number</label>
                        <input type="text" class="form-control form-control-lg login-input" id="enroll" name="enrollmentNumber" placeholder="e.g., 0827CS2111XX" required>
                    </div>

                    <div class="mb-4">
                        <label for="semester" class="form-label mb-2">Semester</label>
                        <select class="form-select form-control-lg login-input" id="semester" name="semester" required>
                            <option value="" disabled selected>Select your current semester</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label for="skill" class="form-label mb-2">Primary Skill</label>
                        <select class="form-select form-control-lg login-input" id="skill" name="skill" required>
                            <option value="" disabled selected>Select your primary skill</option>
                            <option>Web Development</option>
                            <option>Data Science</option>
                            <option>Robotics</option>
                            <option>App Development</option>
                            <option>Cybersecurity</option>
                            <option>Machine Learning</option>
                            <option>Cloud Computing</option>
                            <option>DevOps</option>
                            <option>Game Development</option>
                            <option>Blockchain Technology</option>
                            <option>Artificial Intelligence</option>
                            <option>Internet of Things (IoT)</option>
                            <option>UI/UX Design</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label for="email" class="form-label mb-2">Email Address</label>
                        <input type="email" class="form-control form-control-lg login-input" id="email" name="email" placeholder="Your university email" required>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label mb-2">Password</label>
                        <input type="password" class="form-control form-control-lg login-input" id="password" name="password" placeholder="Create a strong password" required>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <a href="/" class="btn btn-primary btn-lg login-btn">Register</a>
                    </div>

                    <p class="mt-3 text-center text-muted">
                        Already have an account? <a href="/login" class="text-info-link">Login Here</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>

