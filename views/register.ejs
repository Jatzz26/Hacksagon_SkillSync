<% layout('layout') %>

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center text-light mb-4 fw-bold"> Register for SkillSync</h2>

        <form action="/register" method="POST" class="card p-4 shadow bg-dark text-light">
          <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" class="form-control bg-dark text-light border-secondary" id="name" name="name" required>
          </div>

          <div class="mb-3">
            <label for="enroll" class="form-label">Enrollment Number</label>
            <input type="text" class="form-control bg-dark text-light border-secondary" id="enroll" name="enrollmentNumber" required>
          </div>

          <div class="mb-3">
            <label for="semester" class="form-label">Semester</label>
            <select class="form-select bg-dark text-light border-secondary" id="semester" name="semester" required>
              <option value="" disabled selected>Select semester</option>
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="skill" class="form-label">Skill</label>
            <select class="form-select bg-dark text-light border-secondary" id="skill" name="skill" required>
              <option value="" disabled selected>Select Skill</option>
              <option>Web Development</option>
              <option>Data Science</option>
              <option>Robotics</option>
              <option>App Development</option>
              <option>Cybersecurity</option>
              <option>Machine Learning</option>
              <option>Cloud Computing</option>
              <option>DevOps</option>
              <option>Game Development</option>
              <option>Blockchain Technology</option>
              <option>Artificial Intelligence</option>
              <option>Internet of Things (IoT)</option>
              <option>UI/UX Design</option>
              
            </select>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" class="form-control bg-dark text-light border-secondary" id="email" name="email" required>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control bg-dark text-light border-secondary" id="password" name="password" required>
          </div>

          <button type="submit" class="btn btn-success w-100">Register</button>
        </form>

        <p class="mt-3 text-center text-light">
          Already have an account? <a href="/login" class="text-info">Login</a>
        </p>
      </div>
    </div>
  </div>
</section>
